<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nakayamanobuo.kadai1.setting">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ホーム"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定"
        android:id="@+id/button5"
        android:layout_alignBottom="@+id/home"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非常食"
        android:id="@+id/food"
        android:layout_alignBottom="@+id/home"
        android:layout_toEndOf="@+id/home" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="備蓄品"
        android:id="@+id/stockButton"
        android:layout_alignBottom="@+id/button5"
        android:layout_toEndOf="@+id/food" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大人"
        android:id="@+id/textView4"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="小人"
        android:id="@+id/textView5"
        android:layout_above="@+id/limit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="期日"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="設定"
        android:id="@+id/textView7"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <EditText
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/child"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/limit" />

    <EditText
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/limit"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/child"
        android:layout_toEndOf="@+id/child" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/adultText"
        android:layout_toEndOf="@+id/adultText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView7"
        android:layout_toEndOf="@+id/limit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView11"
        android:layout_alignStart="@+id/food"
        android:layout_alignBottom="@+id/textView7" />

    <EditText
        android:inputType="number"
        android:ems="2"
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adultText"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/child" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="幼児"
        android:id="@+id/baby"
        android:layout_alignTop="@+id/textView8"
        android:layout_toEndOf="@+id/food" />

    <EditText
        android:maxLength="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/babyText"
        android:layout_alignBottom="@+id/baby"
        android:layout_toEndOf="@+id/baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/babyText"
        android:layout_toEndOf="@+id/babyText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※中学生以上"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※2歳～小学生"
        android:id="@+id/textView17"
        android:layout_below="@+id/child"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※2歳未満"
        android:id="@+id/textView18"
        android:layout_below="@+id/baby"
        android:layout_alignStart="@+id/baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※非常食の消費期限到達の何日前にメッセージを出すかを設定"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView18"
        android:layout_alignEnd="@+id/baby" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※何日分の備蓄をするのか設定"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_id"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

</RelativeLayout>
