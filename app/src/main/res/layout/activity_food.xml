<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nakayamanobuo.kadai1.food"
   >

    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="com.example.nakayamanobuo.kadai1.ButtonFragment"
        class="com.example.nakayamanobuo.kadai1.ButtonFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_height="320dp"
        android:layout_width="fill_parent">

    <GridLayout
        android:id="@+id/LinearLayout"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="食べ物"
            android:id="@+id/textView21"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />


        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/retoruto_gohan"
    android:src="@drawable/retoruto_gohan"
    android:layout_below="@+id/textView21"
    android:layout_toStartOf="@+id/kandume"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/kandume"
            android:src="@drawable/kandume"
            android:layout_alignBottom="@+id/retoruto_gohan"
            android:layout_toEndOf="@+id/home"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/kanmen"
    android:src="@drawable/kanmen"
    android:layout_alignTop="@+id/kandume"
    android:layout_toEndOf="@+id/kandume"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/kanpan"
    android:src="@drawable/kanpan"
    android:layout_above="@+id/okasi"
    android:layout_toEndOf="@+id/kanmen"
    android:layout_row="1"
    android:layout_column="3" />


<ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/kandume_syusai"
    android:src="@drawable/kandume"
    android:layout_below="@+id/retoruto_gohan"
    android:layout_toStartOf="@+id/retoruto"
    android:layout_row="4"
    android:layout_column="0" />

<ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/retoruto"
    android:src="@drawable/retoruto"
    android:layout_above="@+id/rinyuusyoku"
    android:layout_alignStart="@+id/kandume"
    android:layout_row="4"
    android:layout_column="1" />

<ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/furizu"
    android:src="@drawable/furizu_dorai"
    android:layout_above="@+id/karori"
    android:layout_alignStart="@+id/kanmen"
    android:layout_row="4"
    android:layout_column="2" />


        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/karori"
            android:src="@drawable/karori_meito"
            android:layout_alignTop="@+id/konamilk"
            android:layout_toEndOf="@+id/konamilk"
            android:layout_row="4"
            android:layout_column="3" />

        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/okasi"
    android:src="@drawable/okasi"
    android:layout_alignTop="@+id/furizu"
    android:layout_alignStart="@+id/kanpan"
    android:layout_row="7"
    android:layout_column="0" />

        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/rinyuusyoku"
    android:src="@drawable/rinyu"
    android:layout_below="@+id/kandume_syusai"
    android:layout_alignStart="@+id/kandume_syusai"
    android:layout_row="7"
    android:layout_column="1" />

        <ImageButton
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:id="@+id/konamilk"
    android:src="@drawable/konamilk"
    android:layout_alignTop="@+id/rinyuusyoku"
    android:layout_toEndOf="@+id/rinyuusyoku"
    android:layout_row="7"
    android:layout_column="2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="水"
            android:id="@+id/textView23"
            android:layout_above="@+id/mizu"
            android:layout_alignParentStart="true"
            android:layout_row="11"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:id="@+id/mizu"
            android:src="@drawable/mizu"
            android:layout_above="@+id/home"
            android:layout_alignParentStart="true"
            android:layout_row="12"
            android:layout_column="0" />

        <requestFocus
            android:layout_row="1"
            android:layout_column="13" />

    </GridLayout>
    </ScrollView>


</RelativeLayout>
